					<a href="/users/edit">Edit your Profile</a>
					<a href="/logout">Logout</a>
				</nav>
			<% else %>
			<%= erb :login %>
			<% end %>
		</header>
		<% %w[notice error warning].each do |key| %>
<% if flash[key.to_sym] %>
    <div id="<%= key %>" class="flash">
      <%= flash[key.to_sym] %>
    </div>
  <% end %>
<% end %>
